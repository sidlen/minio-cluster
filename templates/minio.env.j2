{{ ansible_managed | comment }}

# Minio volumes.
MINIO_VOLUMES="{{ minio_server_cluster_nodes | join(' ') }}"
# Minio cli options.
MINIO_OPTS="--address {{ minio_server_addr }} {{ minio_server_opts }}"

{% if minio_access_key %}
# Access Key of the server.
MINIO_ACCESS_KEY="{{ minio_access_key }}"
{% endif %}
{% if minio_secret_key %}
# Secret key of the server.
MINIO_SECRET_KEY="{{ minio_secret_key }}"
{% endif %}
# Root user for the server.
{% if minio_root_user %}
MINIO_ROOT_USER="{{ minio_root_user }}"
{% endif %}
# Root secret for the server.
{% if minio_root_password %}
MINIO_ROOT_PASSWORD="{{ minio_root_password }}"
{% endif %}
#prometheus authentication type (public or jwt)
MINIO_PROMETHEUS_AUTH_TYPE="{{ prometheus_ath_type }}"
#minio-cluster load balancer url
MINIO_SERVER_URL="{{ minio_lb_url }}"

{{ minio_server_env_extra }}
